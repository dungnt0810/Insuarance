
@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model Insurance_Web.Models.Customer

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
            </div>

            <!-- Form-->
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Order Detail</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form role="form" method="post" asp-area="Admin" asp-controller="Customer" asp-action="Edit">
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label>Id</label>
                                        <input type="text" class="form-control" readonly asp-for="Id">
                                    </div>
                                </div>
                                <div class="col-sm-8">
                                    <div class="form-group">
                                        <label>Id Card</label>
                                        <input type="text" class="form-control" asp-for="IdCard">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Fullname</label>
                                        <input type="text" class="form-control" asp-for="Fullname">
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Phone</label>
                                        <input type="tel" class="form-control" asp-for="Phone">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-9">
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="email" class="form-control" asp-for="Email">
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input type="password" class="form-control" asp-for="Password">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>Address</label>
                                        <input type="text" class="form-control" asp-for="Address">
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>Gender(isFemale)</label>
                                        <input type="checkbox" class="form-control" asp-for="Gender">
                                    </div>
                                </div>

                                <div class="col-sm-auto">
                                    <div class="form-group">
                                        <label>BirthDay</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                            </div>
                                            <input type="date" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask asp-for="Birthday">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Save Change</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
            <!-- Form-->
            <div class="col-md-3">
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>

