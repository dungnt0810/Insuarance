
@{
    ViewData["Title"] = "Edit Order";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model Insurance_Web.Models.Order

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                </div>

                <!-- Form Order Detail-->
                <div class="col-md-6">
                    <div class="card card-warning">
                        <div class="card-header">
                            <h3 class="card-title">Order Detail</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <form role="form" method="post" asp-area="Admin" asp-controller="Order" asp-action="Edit">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <label>IdClaim</label>
                                            <input type="text" class="form-control" readonly asp-for="Id">
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <label>IdCustomer</label>
                                            <input type="text" class="form-control" disabled asp-for="IdCustomer">
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <label>IdEmployee</label>
                                            <input type="text" class="form-control" disabled asp-for="IdEmployee">
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <label>IdPolicy</label>
                                            <input type="text" class="form-control" disabled asp-for="IdPolicy">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Fullname</label>
                                            <input type="text" class="form-control" asp-for="Fullname">
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Phone</label>
                                            <input type="tel" class="form-control" asp-for="Phone">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-9">
                                        <div class="form-group">
                                            <label>Address</label>
                                            <input type="text" class="form-control" asp-for="Address">
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <label>Type Payment</label>
                                            <input type="checkbox" class="form-control" asp-for="TypePayment">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6">
                                        <!-- Date dd/mm/yyyy -->
                                        <div class="form-group">
                                            <label>Time Start</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                                </div>
                                                <input type="date" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask asp-for="TimeStart">
                                            </div>
                                        </div>
                                        <!-- Date dd/mm/yyyy -->
                                    </div>

                                    <div class="col-sm-6">
                                        <!-- Date dd/mm/yyyy -->
                                        <div class="form-group">
                                            <label>Time End</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                                </div>
                                                <input type="date" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask asp-for="TimeEnd">
                                            </div>
                                        </div>
                                        <!-- Date dd/mm/yyyy -->
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Price</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">$</span>
                                                </div>
                                                <input type="text" class="form-control" asp-for="Price">
                                                <div class="input-group-append">
                                                    <span class="input-group-text">.000 VND</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <!-- textarea -->
                                        <div class="form-group">
                                            <label>Description</label>
                                            <textarea class="form-control" rows="3" asp-for="Description"></textarea>
                                        </div>
                                    </div>
                                </div>

                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary">Save Change</button>
                                </div>
                            </form>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
                <!-- Form Order Detail-->

                <div class="col-md-3">

                </div>

            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
