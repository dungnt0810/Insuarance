
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-12">
            <!-- /.card -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Orders</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id Order</th>
                                <th>Address</th>
                                <th>Decription</th>
                                <th>Time Start</th>
                                <th>Time End</th>
                                <th>Price</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in ViewBag.orders)
                            {
                                <tr>
                                    <td>@order.Id</td>
                                    <td>@order.Address</td>
                                    <td>@order.Description</td>
                                    <td>@order.TimeStart</td>
                                    <td>@order.TimeEnd</td>
                                    <td>@order.Price</td>
                                    <td><a asp-area="Admin" asp-controller="Order" asp-action="OrderDetail" asp-route-idOrder="@order.Id">Detail</a></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Id Order</th>
                                <th>Address</th>
                                <th>Decription</th>
                                <th>Time Start</th>
                                <th>Time End</th>
                                <th>Price</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

